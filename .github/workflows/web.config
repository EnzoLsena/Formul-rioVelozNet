<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <defaultDocument>
            <files>
                <add value="login.php" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <rule name="RedirectRootToLogin">
                    <match url="^$" />
                    <action type="Rewrite" url="login.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>